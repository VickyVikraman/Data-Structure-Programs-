import java.io.*;
import java.util.*;
import java.text.*;
import java.math.*;
import java.util.regex.*;

public class Coda {

    Scanner in = new Scanner(System.in);

    public static void main(String[] args) {
        int n = in.nextInt();
        int[] a = new int[n];
        for(int a_i=0; a_i < n; a_i++)
        {
            a[a_i] = in.nextInt();
        }
        int count = 0;
        for (int i=0; i<a.length-2; i++) {
            if ((a[i] < a[i+1] && a[i+1] < a[i+2]) ||
                    (a[i] > a[i+1] && a[i+1] > a[i+2])) {
                count++;
            }
        }
        System.out.println(count);
        int elements[]=new int[10];
        int i=0;
        if(((elements[i] < elements[i+1]) && (elements[i+1] elements[i+2])) || ((elements[i]>elements[i+1]) && (elements[i+1]>elements[i+2])))
        {
        	
        }
    }
}


#include <stdio.h>

int main()
{
    int a[20][20];
    int r=5,c=5;
    for (int i=0;i<r;i++)
    {
        for (int j=0;j<c;j++)
        {
            if((i==0)||(i==r-1))
            {
                a[i][j]=1;
            }
            else if((j==0)||(j==c-1))
            {
                a[i][j]=1;
            }
            else
            {
                a[i][j]=0;
            }
        }
    }
    for(int i=0;i<r;i++)
    {
        for (int j=0;j<c;j++)
        {
            printf("%d",a[i][j]);
        }
        printf("\n");
    }

    return 0;
}